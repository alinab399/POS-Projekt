<Window x:Class="PresenceLog_Sport.TrainingsgruppeErstellen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresenceLog_Sport"
        mc:Ignorable="d"
        Title="TrainingsgruppeErstellen" Height="450" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        <Label Content="Titel:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="TextBoxTitel" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Text="Trainingsname" VerticalAlignment="Center"/>
        <Label Content="Anfangsdatum" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <DatePicker x:Name="DatePickerStartdatum" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Column="0" Content="Enddatum:" Grid.Row="2" VerticalAlignment="Center"/>
        <DatePicker x:Name="DatePickerEnddatum" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center"/>
        <Label Content="Wochentage:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>

        <CheckBox x:Name="CheckBoxMontag" Grid.Column="1" Content="Montag" HorizontalAlignment="Left" Margin="5,2,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxDienstag" Grid.Column="1" Content="Dienstag" HorizontalAlignment="Left" Margin="89,2,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxMittwoch" Grid.Column="1" Content="Mittwoch" HorizontalAlignment="Left" Margin="177,2,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxDonnerstag" Grid.Column="1" Content="Donnerstag" HorizontalAlignment="Left" Margin="268,2,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxFreitag" Grid.Column="1" Content="Freitag" HorizontalAlignment="Left" Margin="5,28,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <CheckBox x:Name="CheckBoxSamstag" Grid.Column="1" Content="Samstag" HorizontalAlignment="Left" Margin="89,0,0,0" Grid.Row="3" VerticalAlignment="Center"/>
        <CheckBox x:Name="CheckBoxSonntag" Grid.Column="1" Content="Sonntag" HorizontalAlignment="Left" Margin="177,0,0,0" Grid.Row="3" VerticalAlignment="Center"/>

        <ListView x:Name="ListViewMitglieder" Grid.ColumnSpan="2" Grid.Row="4">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Hinzufügen" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IstInTrainingsgruppe, UpdateSourceTrigger=PropertyChanged}">

                                </CheckBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Vorname" Width="200" DisplayMemberBinding="{Binding Vorname}">

                    </GridViewColumn>
                    <GridViewColumn Header="Nachname" Width="200" DisplayMemberBinding="{Binding Nachname}">

                    </GridViewColumn>
                    <GridViewColumn Header="Geburtsdatum" Width="150" DisplayMemberBinding="{Binding Geburtsdatum}">

                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="AbbrechenBtn" Content="Abbrechen" Grid.Column="0" Grid.Row="5" Margin="20" Width="100" Click="AbbrechenBtn_Click"></Button>
        <Button x:Name="OKBtn" Content="OK" Grid.Column="1" Grid.Row="5" Margin="20" Width="100" Click="OKBtn_Click"></Button>
        <Button x:Name="HinzufuegenBtn" Content="+" Grid.Column="1" Margin="403,31,10,5" Grid.Row="5"></Button>

    </Grid>
</Window>
