<Window x:Class="PresenceLog_Sport.Personhinzufuegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresenceLog_Sport"
        mc:Ignorable="d"
        Title="Person hinzufügen" Height="230" Width="510" FontFamily="Bahnschrift" FontSize="17">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFECEFF1" Offset="0.0"/>
                <GradientStop Color="#FFCFD8DC" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Label Content="Vorname:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5,0"/>
        <TextBox x:Name="TextBoxVorname" Grid.Row="0" Grid.Column="1" BorderBrush="CadetBlue" BorderThickness="1" Margin="8" Height="30" VerticalAlignment="Center"/>
        <Label Content="Nachname:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5,0"/>
        <TextBox x:Name="TextBoxNachname" Grid.Row="1" Grid.Column="1" BorderBrush="CadetBlue" BorderThickness="1" Margin="8" Height="30" VerticalAlignment="Center"/>
        <Label Content="Geburtsdatum:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5,0"/>
        <DatePicker x:Name="DatePickerGeburtsdatum" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="8" BorderThickness="1" BorderBrush="CadetBlue" Background="White"/>


       

        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,0">
            <Button x:Name="AbbrechenBtn" Content="Abbrechen" Width="110" Click="AbbrechenBtn_Click" Height="40" Padding="10" Margin="10,0" VerticalAlignment="Center" Background="CadetBlue"
                Foreground="White" BorderThickness="0" Cursor="Hand" Opacity="0.9"/>
            <Button x:Name="OkayBtn" Content="OK" Width="110" Click="OkayBtn_Click" Height="40" Padding="10" Margin="10,0" VerticalAlignment="Center" Background="CadetBlue"
                Foreground="White" BorderThickness="0" Cursor="Hand" Opacity="0.9"/>

        </StackPanel>

    </Grid>
</Window>
