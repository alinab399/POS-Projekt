<Page x:Class="PresenceLog_Sport.AnalysePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PresenceLog_Sport"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AnalysePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="ButtonZurueck" Width="70" Background="Transparent" BorderThickness="0" Content="↩" Margin="20,0,0,0" Click="ButtonZurueck_Click"/>
        </StackPanel>

        
        <ListView x:Name="ListViewAnalyse" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Vorname" Width="250" DisplayMemberBinding="{Binding Path=Vorname}"></GridViewColumn>
                    <GridViewColumn Header="Nachname" Width="250" DisplayMemberBinding="{Binding Path=Nachname}"></GridViewColumn>
                    <GridViewColumn Header="Analyse" Width="250" DisplayMemberBinding="{Binding Analyse}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
    </Grid>
</Page>
