<Page x:Class="PresenceLog_Sport.AnwesenheitsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PresenceLog_Sport"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Anwesenheit">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="ButtonZurueck" HorizontalAlignment="Left" Width="70" Background="Transparent" BorderThickness="0" Click="ButtonZurueck_Click" Content="↩" Margin="20,0,0,0"/>
            <Button Grid.Column="1" x:Name="ButtonAnalyse" HorizontalAlignment="Right" Width="80" Background="Transparent" BorderThickness="0" Click="ButtonAnalyse_Click" Content="Analyse" Margin="0,0,20,0"/>
        </Grid>


        <ListView x:Name="ListViewAnwesenheit" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Vorname" Width="150" DisplayMemberBinding="{Binding Path=Vorname}"></GridViewColumn>
                    <GridViewColumn Header="Nachname" Width="150" DisplayMemberBinding="{Binding Path=Nachname}"></GridViewColumn>
                    <GridViewColumn Header="Geburtsdatum" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Geburtsdatum, StringFormat='dd.MM.yyyy'}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Anwesend" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Button x:Name="AnwesendButton" Content="✔" Click="AnwesendButton_Click"/>
                                    <Button x:Name="AbwesendButton" Content="✖" Click="AbwesendButton_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Begründung" Width="150" DisplayMemberBinding="{Binding Path=Anwesenheit.Begruendung}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
    
</Page>
    

